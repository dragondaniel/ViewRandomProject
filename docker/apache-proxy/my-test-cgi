#!/bin/bash echo "Content-type: text/html" echo "" echo "<html><head><title>Bash as CGI" echo "</title></head><body>" echo "<h1>General system information for host $(hostname -s)</h1>" echo "" echo "<h1>Date generated</h1>" echo "<pre> $(date) </pre>" echo "<h1>Memory Usage:</h1>" echo "<pre> $(free -h) </pre>" echo "<h1>Disk usage</h1>" echo "<pre> $(df -h) </pre>" echo "<center>Information generated on $(date)</center>" echo "</body></html>"
